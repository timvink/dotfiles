{
    "global": {
        "ask_for_confirmation_before_quitting": true,
        "check_for_updates_on_startup": true,
        "show_in_menu_bar": true,
        "show_profile_name_in_menu_bar": false
    },
    "profiles": [
        {
            "complex_modifications": {
                "parameters": { "basic.to_if_held_down_threshold_milliseconds": 250 },
                "rules": [
                    {
                        "description": "Caps Lock: Tap for Escape, Hold for Hyper Key (MacBook Keyboard Only)",
                        "manipulators": [
                            {
                                "conditions": [{ "identifiers": [{ "is_built_in_keyboard": true }], "type": "device_if" }],
                                "from": { "key_code": "caps_lock", "modifiers": { "optional": ["any"] } },
                                "to_if_alone": [{ "key_code": "escape" }],
                                "to_if_held_down": [{ "key_code": "left_shift", "modifiers": ["command", "control", "option"] }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Ctrl + Alt + Down to Cmd + H (Minimize)",
                        "manipulators": [
                            {
                                "from": { "key_code": "down_arrow", "modifiers": { "mandatory": ["control", "option"] } },
                                "to": [{ "key_code": "h", "modifiers": ["command"] }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper + F to open Finder",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "f", "modifiers": { "mandatory": ["command", "control", "option", "shift"] } },
                                "to": [
                                    { "shell_command": "open -a 'Finder.app'" }
                                ],
                                "to_delayed_action": {
                                    "to_if_invoked": [
                                        { "key_code": "left_arrow", "modifiers": ["control", "option"] }
                                    ]
                                },
                                "parameters": {
                                    "basic.to_delayed_action_delay_milliseconds": 50
                                }
                            }
                        ]
                    },
                    {
                        "description": "Hyper + B to open Google Chrome",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "b", "modifiers": { "mandatory": ["command", "control", "option", "shift"] } },
                                "to": [
                                    { "shell_command": "open -a 'Google Chrome.app'" }
                                ],
                                "to_delayed_action": {
                                    "to_if_invoked": [
                                        { "key_code": "up_arrow", "modifiers": ["control", "option"] }
                                    ]
                                },
                                "parameters": {
                                    "basic.to_delayed_action_delay_milliseconds": 50
                                }
                            }
                        ]
                    },
                    {

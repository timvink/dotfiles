                                    { "shell_command": "open -a 'Alacritty.app'" }
                                ],
                                "to_delayed_action": {
                                    "to_if_invoked": [
                                        { "key_code": "right_arrow", "modifiers": ["control", "option"] }
                                    ]
                                },
                                "parameters": {
                                    "basic.to_delayed_action_delay_milliseconds": 50
                                }
                            }
                        ]
                    },
